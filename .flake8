[flake8]
ignore = E203, E266, E501, W503
max-line-length = 100
max-complexity = 18
select = B,C,E,F,W,T4,B9
per-file-ignores = __init__.py:F401
exclude =
    .git,
    __pycache__,
    docs/source/conf.py,
    build,
    dist,
    .venv,
    tmp,
    3rdparty
    python/arachne/runtime/rpc/protobuf/*
